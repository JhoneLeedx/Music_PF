<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/rollpager"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:padding="3dp" />

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp"></LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp">
            <LinearLayout
                android:id="@+id/linear_gs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/circle_img_bg"
                    android:src="@drawable/huatong"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="歌手"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_mrtj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/circle_img_bg"
                    android:src="@drawable/tuijian"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="每日推荐"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_zj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/circle_img_bg"
                    android:src="@drawable/zhuanji"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="专辑"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="推荐歌单"
            android:drawableRight="@drawable/next_32"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:padding="5dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_tjgd"
            android:layout_width="match_parent"
            android:layout_height="220dp">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="热门电台"
            android:drawableRight="@drawable/next_32"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:padding="5dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_rmdt"
            android:layout_width="match_parent"
            android:layout_height="220dp">

        </android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="最新排行"
            android:drawableRight="@drawable/next_32"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:padding="5dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_zxph"
            android:layout_width="match_parent"
            android:layout_height="220dp">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</ScrollView>