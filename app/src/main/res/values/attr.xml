<?xml version="1.0" encoding="utf-8"?>
<!--自定义view的属性-->
<resources>
    <declare-styleable name="LrcView">
        <attr name="textSize" format="dimension" />
        <attr name="dividerHeight" format="dimension" />
        <attr name="normalTextColor" format="reference|color" />
        <attr name="currentTextColor" format="reference|color" />
        <attr name="animationDuration" format="integer" />
    </declare-styleable>
    
    <declare-styleable name="CircleImageView">
        <attr name="outColor" format="reference|color"/>
        <attr name="outWidth" format="dimension"/>
    </declare-styleable>
</resources>